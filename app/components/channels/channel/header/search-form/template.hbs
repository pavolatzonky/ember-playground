<form
  {{on "submit" this.search}}
  class="md:block border border-grey rounded-lg pl-3 pr-2 py-1 flex flex-row-reverse items-center"
  data-test-channels-channel-header-search-form="index"
>
  <label for="search" class="sr-only">Search messages</label>

  <Input
    {{on "input" this.updateSearchTerm}}
    @value={{this.searchTerm}}
    placeholder={{t "Channels::Channel::Header::SearchForm.search" channelName="#pali"}}
    type="search"
    class="appearance-none"
    data-test-channels-channel-header-search-form="field"
  />

  <button type="submit" aria-label="Submit search" data-test-channels-channel-header-search-form="button">
    <svg class="fill-current text-grey h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
      <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z">
      </path>
    </svg>
  </button>
</form>