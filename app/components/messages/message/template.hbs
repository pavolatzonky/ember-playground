<div class="flex items-start px-6 py-2 text-sm hover-target hover:bg-grey-lightest" data-test-message="index" role="listitem">
  <figure class="w-10 h-10 rounded overflow-hidden mr-3">
    <img src={{@avatarSrc}} alt="Avatar" data-test-message="user-avatar">
  </figure>

  <div class="flex-1">
    <h5 class="text-sm">
      <a href="#" class="text-black font-bold no-underline hover:underline" data-test-message="user-name">
        {{@sender}}
      </a>
      <span class="sr-only">at</span>
      <time class="text-grey-darker text-xs font-normal" data-test-message="timestamp">
        {{format-date @timestamp outputFormat="dd/MM/yyyy, HH:mm:ss"}}
      </time>
    </h5>

    <p class="message__body text-black leading-normal" data-test-message="body">
      {{@messageBody}}
    </p>
  </div>

  <button
    type="button"
    class="message__delete-button border-transparent hover:border-red-light show-on-hover hover:bg-red-lightest border-1 rounded mb-1 pl-3 pr-2 py-1"
    aria-label="delete message">
    ğŸ—‘
  </button>
</div>